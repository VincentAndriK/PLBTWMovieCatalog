<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.plbtwmoviecatalog.MovieDetailActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Movie Detail"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMovieName"
        android:text="xxx"
        android:textSize="40dp"
        android:layout_above="@+id/tvSummary"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSummary"
        android:text="xxx"
        android:textSize="20dp"
        android:layout_above="@+id/tvStatus"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvStatus"
        android:layout_above="@+id/btnShare"
        android:layout_alignParentEnd="true" />

    <com.facebook.share.widget.ShareButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fb_share_button"
        android:clickable="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgMovie"
        android:layout_below="@+id/textView2"
        android:scaleType="center"
        android:layout_above="@+id/tvMovieName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/twitterLogi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:fontFamily="sans-serif-light"
        android:text="Share on Twitter"
        android:textSize="20sp"
        android:layout_above="@+id/fb_share_button"
        android:layout_centerHorizontal="true" />

    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/btnShare"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:clickable="false"
        android:layout_above="@+id/twitterLogi"
        app:sparkbutton_activeImage="@drawable/ic_twitter"
        app:sparkbutton_iconSize="30dp"
        app:sparkbutton_pressOnTouch="false"
        app:sparkbutton_primaryColor="@color/twitter_primary_color"
        app:sparkbutton_secondaryColor="@color/twitter_secondary_color"
        android:layout_alignEnd="@+id/fb_share_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/btnBack"
        android:drawableLeft="@drawable/ic_reply_black_24dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/imgMovie"
        android:layout_alignParentStart="true" />

</RelativeLayout>
