<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.plbtwmoviecatalog">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <provider
        android:name="com.facebook.FacebookContentProvider"
        android:authorities="com.facebook.app.FacebookContentProvider1397597340293261"
        android:exported="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_movie"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginTwitterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="bcc0b0bb26f48d77f29c53ff48369254b7422368" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name=".MovieMenuActivity" />
        <activity android:name=".MovieActivity" />
        <activity android:name=".MovieDetailActivity" />
        <activity android:name=".TweetActivity" />
        <activity android:name=".AboutActivity" />
    </application>

</manifest>